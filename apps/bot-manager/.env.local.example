# Environment configuration for data loading
# Copy this file to .env.local and set your desired configuration

# Data loading phase configuration
# Options: development, phase1, phase2, phase3, phase4, production, testing
NEXT_PUBLIC_DATA_PHASE=phase1

# Override specific loading configuration (optional)
# NEXT_PUBLIC_LOADING_CONFIG=phase1

# API configuration
NEXT_PUBLIC_API_BASE_URL=/api/v1
NEXT_PUBLIC_API_TIMEOUT=5000

# Cache configuration
NEXT_PUBLIC_CACHE_ENABLED=true
NEXT_PUBLIC_CACHE_TTL=300

# Debug configuration
NEXT_PUBLIC_DEBUG_DATA_LOADING=true
NEXT_PUBLIC_LOG_DATA_SOURCES=true

# Vercel KV configuration (required for phase 1)
KV_REST_API_URL=your-kv-rest-api-url
KV_REST_API_TOKEN=your-kv-rest-api-token
KV_REST_API_READ_ONLY_TOKEN=your-kv-read-only-token

# Feature flags for incremental rollout (phase 1: notifications only)
NEXT_PUBLIC_ENABLE_API_METADATA=false
NEXT_PUBLIC_ENABLE_API_USER=false
NEXT_PUBLIC_ENABLE_API_BOTS=false
NEXT_PUBLIC_ENABLE_API_MARKET=false
NEXT_PUBLIC_ENABLE_API_NOTIFICATIONS=true

# Bot wallet encryption configuration
# Required for generating bots with real encrypted wallets (non-testing profiles)
# Generate a secure random string for production use
WALLET_ENCRYPTION_KEY=your-32-byte-encryption-key-here

# Vercel Sandbox configuration (required for bot execution)
VERCEL_TOKEN=your-vercel-token
VERCEL_TEAM_ID=your-team-id  
VERCEL_PROJECT_ID=your-project-id

# Cron job authentication (required for scheduled bot execution)
CRON_SECRET=your-cron-secret-key