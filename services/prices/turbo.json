{
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "@repo/tokens#build",
        "dexterity-sdk#build",
        "@modules/discovery#build",
        "@services/contract-registry#build"
      ],
      "outputs": [
        "dist/**"
      ],
      "env": [
        "BLOB_READ_WRITE_TOKEN",
        "BLOB_BASE_URL",
        "KV_URL",
        "KV_REST_API_URL",
        "KV_REST_API_TOKEN",
        "KV_REST_API_READ_ONLY_TOKEN"
      ]
    },
    "dev": {
      "dependsOn": [
        "@repo/tokens#build",
        "dexterity-sdk#build",
        "@modules/discovery#build",
        "@services/contract-registry#build"
      ]
    }
  }
}