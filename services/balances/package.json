{
  "name": "@services/balances",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "files": [
    "dist"
  ],
  "main": "./dist/es/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "typescript": "./src/index.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.ts",
        "default": "./dist/es/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    }
  },
  "scripts": {
    "build": "bunchee",
    "dev": "bunchee --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:e2e": "tsx scripts/run-e2e-tests.ts",
    "test:e2e:connection": "tsx scripts/tests/test-connection.ts",
    "test:e2e:snapshot": "tsx scripts/tests/test-snapshot-e2e.ts",
    "test:e2e:balance": "tsx scripts/tests/test-balance-reads.ts",
    "test:e2e:kv": "tsx scripts/tests/test-kv-storage.ts",
    "test:e2e:all": "tsx scripts/tests/test-all-reads.ts"
  },
  "dependencies": {
    "@repo/polyglot": "workspace:*",
    "@repo/tokens": "workspace:*",
    "@swc/helpers": "^0.5.17",
    "@vercel/blob": "^0.24.1",
    "@vercel/kv": "^3.0.0"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.0.14",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.1.3",
    "bunchee": "^6.5.4",
    "eslint": "^9.31.0",
    "happy-dom": "^18.0.1",
    "tsx": "^4.20.3",
    "typescript": "5.8.3",
    "vitest": "^3.1.3"
  },
  "keywords": [
    "balance",
    "tracking",
    "time-series",
    "blockchain",
    "stacks"
  ]
}