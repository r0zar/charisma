{
  "name": "blaze-sdk",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "files": [
    "dist"
  ],
  "main": "./dist/es/index.js",
  "module": "./dist/es/index.js",
  "types": "./dist/es/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/es/index.d.ts",
        "default": "./dist/es/index.js"
      },
      "require": {
        "types": "./dist/cjs/index.d.cts",
        "default": "./dist/cjs/index.cjs"
      }
    },
    "./realtime": {
      "import": {
        "types": "./dist/es/realtime.d.ts",
        "default": "./dist/es/realtime.js"
      },
      "require": {
        "types": "./dist/cjs/realtime.d.cts",
        "default": "./dist/cjs/realtime.cjs"
      }
    }
  },
  "scripts": {
    "build": "bunchee",
    "dev": "bunchee --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check-types": "tsc --noEmit",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "script": "node scripts/run.js"
  },
  "jest": {
    "preset": "@repo/jest-presets/node"
  },
  "dependencies": {
    "@repo/polyglot": "workspace:*",
    "@stacks/connect": "latest",
    "@stacks/encryption": "latest",
    "@stacks/network": "latest",
    "@stacks/transactions": "latest",
    "@swc/helpers": "^0.5.17",
    "partysocket": "^1.0.2",
    "zod": "^3.25.75"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@repo/eslint-config": "workspace:*",
    "@repo/jest-presets": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^24.0.7",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.2",
    "@types/ws": "^8.5.14",
    "bunchee": "^6.5.4",
    "eslint": "^9.30.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ts-jest": "^29.3.0",
    "tsx": "^4.19.2",
    "typescript": "5.8.3",
    "ws": "^8.18.0"
  }
}